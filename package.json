{
  "name": "airline-manager-bot",
  "version": "1.0.0",
  "description": "Automated bot for Airline Manager 4 game using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:airline": "playwright test tests/airlineManager.spec.ts --reporter=list",
    "test:airline:headed": "playwright test tests/airlineManager.spec.ts --headed --reporter=list",
    "test:planes": "playwright test tests/dev/fetchPlanes.spec.ts --reporter=list",
    "test:planes:headed": "playwright test tests/dev/fetchPlanes.spec.ts --headed --reporter=list",
    "test:smartFleet": "playwright test tests/dev/smartFleet.spec.ts --reporter=list",
    "test:smartFleet:headed": "playwright test tests/dev/smartFleet.spec.ts --headed --reporter=list",
    "test:timeout": "playwright test tests/dev/timeoutTest.spec.ts --reporter=list",
    "test:timeout:headed": "playwright test tests/dev/timeoutTest.spec.ts --headed --reporter=list",
    "install:browsers": "playwright install --with-deps chromium"
  },
  "keywords": ["playwright", "automation", "bot", "airline-manager"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^20.17.57"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
